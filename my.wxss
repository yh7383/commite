/* pages/my/my.wxss */
/* 头像等个人信息所处行 */
.top {
  height: 240rpx;
  background-color: #f0f9f6;
}

/* 头像背景框 */
.head{
  display:block;
  float: left;
  height: 180rpx;
  width: 180rpx;
  margin: 30rpx 35rpx;
  border-radius: 50%;
  background-color:#588c7e;
}
/* 头像图片 */
.head image{
  height: 180rpx;
  width: 180rpx;
  border-radius: 50%;
}

/* 头像右侧个人信息集 */
.title{
  float: left;
  height: 190rpx;
  width: 500rpx;
  margin:35rpx 0;
}

.name{
  height: 80rpx;
  width: 500rpx;
  line-height: 80rpx;
  font-size: 20px;
  color: #487267;
  font-weight: bold;
}

.intro{
  height: 40rpx;
  width: 500rpx;
  line-height: 40rpx;
  font-size: 13px;
  color:#487267;
}

/* 朋友、关注、粉丝 */
.focus{
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 13px;
  color:#487267;
}

/* 需跳转页面的标签 */
.jump_details{
  background-color:#f0f9f6;
  line-height: 80rpx;
  border-radius: 3px;
  margin-bottom: 1px;
  padding-left: 5%;
}
/* 隐私相关 */
.privacy{
  box-sizing: border-box;
  padding-left: 35rpx;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 15px;
  font-weight: bold;
  color: #487267;
  margin-top: 30rpx;
}
.item{
  height: 40px;
  line-height: 40px;
  font-size: 14px;
  color:#487267;
}

.numble{
  display: inline-block;
  position: relative; left:40px; top: 3px;
  text-align: left;
  font-size: 15px;
}

/* 分界线 */
.home-header-line {
  background: #e0e3da;
  width: 90%;
  height: 2rpx;
}

/* 开关键 */
.switch_C{
  display: inline-block;
}



